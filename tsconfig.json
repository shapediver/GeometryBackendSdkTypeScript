{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "target": "es6",
        "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "lib": [
            "dom",
            "es6",
            "scripthost",
            "es2018.promise"
        ]
    },
    "include": [
        "./src/*.ts"
    ],
    "exclude": [
        "__tests__/**/*",
        "node_modules/**/*",
        "dist",
        "dist-dev",
        "dist-prod"
    ]
}
