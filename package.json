{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "npm run check-npm-version && lerna bootstrap",
    "clean": "lerna clean && lerna exec -- rm -rf ./dist",
    "reset": "npm run clean && rm -r ./node_modules",
    "check-npm-version": "bash ./scripts/check-npm-version.sh",
    "create-lib": "npm run check-npm-version && bash ./scripts/create-lib.sh",
    "create-package": "bash ./scripts/create-package.sh",
    "add-dependency": "bash ./scripts/add-dependency.sh",
    "add-devDependency": "bash ./scripts/add-devDependency.sh",
    "publish": "lerna publish --force-publish --no-push --registry https://npm.pkg.github.com/",
    "init": "bash ./scripts/init.sh",
    "test": "lerna run test",
    "build": "lerna run build",
    "build-dep": "lerna run build-dep",
    "check-for-updates": "bash ./scripts/check-updates.sh update",
    "upgrade-dependencies": "bash ./scripts/check-updates.sh upgrade-all"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "jest": "^27.4.5",
    "json": "^11.0.0",
    "lerna": "^3.22.1",
    "npm-check-updates": "^12.0.3",
    "ts-jest": "^27.1.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0",
    "webpack-merge": "^5.8.0"
  }
}
